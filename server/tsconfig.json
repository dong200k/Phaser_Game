{
    "compilerOptions": {
        "noImplicitAny": true,
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "strict": true,
        "rootDir": "./",
        "outDir": "./build"
    },
    "include": [
        "src"
    ],
}